<div class="row">
    <div class="col-md-5 mx-auto">
        <h2 class="text-center">Orders being prepared</h2>
        <ul class="prepared">
            {{#each orders}} {{#unless order_ready}} {{> orders/order-block order_ready=true}} {{/unless}} {{/each}}
        </ul>
    </div>
    <div class="col-md-5 mx-auto">
        <h2 class="text-center">Orders served!</h2>

        <ul class="served">
            {{#each orders}} {{#if order_ready}} {{> orders/order-block order_ready=false}} {{/if}} {{/each}}
        </ul>
    </div>
</div>

<h2 class="col-md-6 offset-md-3 text-center mx-auto">Place an order</h2>
<form class="create-form">

    <div class="form-group col-md-6 offset-md-3">
        {{!-- <label for="order">What would you like to order today?</label> --}}
        <input class="form-control" type="text" id="order" name="name" placeholder="What would you like to order today?">
    </div>



    <button class="col-md-2 offset-md-5 mb-5 btn btn-primary" type="submit">Submit your order</button>
</form>